<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BreadTok"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" x:Class="BreadTok.MainWindow"
        mc:Ignorable="d"
        Title="Main" Height="599.7" Width="1024"
        WindowStyle="None"
        ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid HorizontalAlignment="Right" Width="1024" Background="#FFF2F2F2">

        <materialDesign:ColorZone
            Mode="PrimaryDark"
            Padding="16"
            CornerRadius="0"
            materialDesign:ShadowAssist.ShadowDepth="Depth3"
            Panel.ZIndex="1"
            ClipToBounds="False"
            MouseDown="Grid_MouseDown">
            <StackPanel Orientation="Horizontal">
                <TextBlock VerticalAlignment="Center"
                            Margin="16 0 0 0" Text="BreadTok" FontWeight="Bold" FontSize="16" />
                <TextBlock VerticalAlignment="Center"
                    Margin="55 0 0 0" Text="Selamat Datang, Lawrence Patrick!" Width="205" />
                <Button Content="Logout" HorizontalAlignment="Left" Margin="550,0,0,0" VerticalAlignment="Top" Width="77" Background="#FFF0524B" BorderBrush="{x:Null}" Foreground="White" Click="Button_Click_2">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#fe6584"/>
                            <Setter Property="Cursor" Value="Hand"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#fe6584"/>
                                    <Setter Property="Foreground" Value="Black"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Width="75" Height="20"
                                CornerRadius="10" Background="{TemplateBinding Background}">
                                <ContentPresenter VerticalAlignment="Center"
                                              HorizontalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </StackPanel>
        </materialDesign:ColorZone>

        <TabControl Style="{StaticResource MaterialDesignNavigatilRailTabControl}"
                    materialDesign:ColorZoneAssist.Mode="PrimaryMid" Margin="0,53,0,0" Width="1024">
            <TabItem x:Name="tabMasterBahan" Style="{StaticResource MaterialDesignNavigationRailTabItem}" Width="Auto">
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="Spade" FontSize="15" Height="20" Width="auto"/>
                        <TextBlock Text="Master Bahan" Margin="10 0 0 0" FontSize="15"/>
                    </StackPanel>
                </TabItem.Header>
                <Grid>
                    <StackPanel x:Name="panelMasterBahan" HorizontalAlignment="Left" Height="514" Margin="10,10,0,0" VerticalAlignment="Top" Width="661">
                        <Label FontWeight="Bold" FontSize="14" Margin="0,5" Content="Master Bahan"/>
                        <DataGrid x:Name="dgBahan" Height="444" Width="609" IsReadOnly="True" Margin="26,0,25.8,0"/>
                    </StackPanel>
                    <StackPanel x:Name="panelInsertBahan" HorizontalAlignment="Left" Height="514" Margin="10,10,0,0" VerticalAlignment="Top" Width="661" Visibility="Hidden">
                        <Label FontWeight="Bold" FontSize="14" Margin="0,5" Content="Insert Bahan"/>
                        <TextBox Height="23" TextWrapping="Wrap" Text="TextBox" Width="120"/>
                    </StackPanel>
                    
                    <Button x:Name="btnInsert" Content="INSERT BAHAN" HorizontalAlignment="Left" Margin="712,85,0,0" VerticalAlignment="Top" Width="147" Height="38" Click="btnInsert_Click"/>
                    <Button x:Name="btnUpdate" Content="UPDATE BAHAN" HorizontalAlignment="Left" Margin="712,150,0,0" VerticalAlignment="Top" Width="147" Height="40"/>
                    <Button x:Name="btnDelete" Content="DELETE BAHAN" HorizontalAlignment="Left" Margin="712,217,0,0" VerticalAlignment="Top" Width="147" Height="38"/>
                    <Button x:Name="btnBack" Content="BACK TO MASTER" HorizontalAlignment="Left" Margin="712,486,0,0" VerticalAlignment="Top" Width="147" Height="38" Click="btnBack_Click" Visibility="Hidden"/>
                </Grid>
            </TabItem>
            <TabItem x:Name="tabMasterRoti" Style="{StaticResource MaterialDesignNavigationRailTabItem}" Width="Auto">
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="Heart" FontSize="15" Height="20" Width="auto"/>
                        <TextBlock Text="Master Roti" Margin="10 0 0 0" FontSize="15"/>
                    </StackPanel>
                </TabItem.Header>
                <Grid>
                    <ListBox>
                        <ListBoxItem FontWeight="Bold" FontSize="14" Margin="0,5" Content="Master Roti"/>
                        <ListBoxItem Content="Halo"/>
                        <ListBoxItem Content="Ini"/>
                        <ListBoxItem Content="Masih"/>
                        <ListBoxItem Content="Kosong Juga :D"/>
                    </ListBox>
                </Grid>
            </TabItem>
            <TabItem x:Name="tabMasterResep" Style="{StaticResource MaterialDesignNavigationRailTabItem}" Width="Auto">
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="Spade" FontSize="15" Height="20" Width="auto"/>
                        <TextBlock Text="Master Resep" Margin="10 0 0 0" FontSize="15"/>
                    </StackPanel>
                </TabItem.Header>
                <Grid>
                    <ListBox>
                        <ListBoxItem FontWeight="Bold" FontSize="14" Margin="0,5" Content="Master Resep"/>
                        <ListBoxItem Content="Halo"/>
                        <ListBoxItem Content="Ini"/>
                        <ListBoxItem Content="Masih"/>
                        <ListBoxItem Content="Kosong Juga :P"/>
                    </ListBox>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
