<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BreadTok"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:System="clr-namespace:System;assembly=mscorlib" x:Class="BreadTok.MainWindow"
        x:Name="windowPesanan"
        mc:Ignorable="d"
        Title="Main" Height="599.7" Width="1024"
        WindowStyle="None" AllowsTransparency="True"
        ResizeMode="CanResizeWithGrip" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Rectangle Panel.ZIndex="99" Fill="Gray" x:Name="overlay" 
                   Height="599.7" Width="1024" Grid.RowSpan="2"
                   Opacity=".4" Visibility="Hidden"/>

        <materialDesign:ColorZone
            Mode="PrimaryDark"
            Padding="16"
            CornerRadius="0"
            materialDesign:ShadowAssist.ShadowDepth="Depth3"
            Panel.ZIndex="1"
            ClipToBounds="False"
            Grid.Row="0" Grid.Column="0" MouseDown="Grid_MouseDown"
            >
            <Grid Height="auto">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="4*"/>
                    <ColumnDefinition Width="2*"/>
                </Grid.ColumnDefinitions>
                <TextBlock VerticalAlignment="Center"
                            Margin="5 0 0 0" Text="BreadTok" FontWeight="Bold" FontSize="16" Grid.Column="0"/>
                <TextBlock x:Name="lbWelcome" VerticalAlignment="Center" HorizontalAlignment="Left"
                    Margin="0 0 0 0" Text="Selamat Datang, Lawrence Patrick!" Width="205"  Grid.Column="1"/>
                <Button x:Name="btLogout" Content="Logout" HorizontalAlignment="Right" Margin="23.6,0,23.4,-3.4" VerticalAlignment="Top" Width="77" Background="#FFF0524B" BorderBrush="{x:Null}" Foreground="White" Grid.Column="2" Height="21" Click="Button_Click_2">
                    <Button.Style>
                        <Style TargetType="{x:Type Button}">
                            <Setter Property="Background" Value="#fe6584"/>
                            <Setter Property="Cursor" Value="Hand"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#fe6584"/>
                                    <Setter Property="Foreground" Value="Black"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                    <Button.Template>
                        <ControlTemplate TargetType="{x:Type Button}">
                            <Border Width="75" Height="20"
                                CornerRadius="10" Background="{TemplateBinding Background}">
                                <ContentPresenter VerticalAlignment="Center"
                                              HorizontalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </Grid>

        </materialDesign:ColorZone>

        <TabControl Style="{StaticResource MaterialDesignNavigatilRailTabControl}"
                    materialDesign:ColorZoneAssist.Mode="PrimaryMid" Grid.Column="0" Margin="0,0.4,0,0" Grid.Row="1">
            <TabItem Style="{StaticResource MaterialDesignNavigationRailTabItem}" Width="Auto">
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="Spade" FontSize="15" Height="20" Width="auto"/>
                        <TextBlock Text="Master Bahan" Margin="10 0 0 0" FontSize="15"/>
                    </StackPanel>
                </TabItem.Header>
                <Grid>
                    <Canvas x:Name="panelMasterBahan" HorizontalAlignment="Left" Height="514" Margin="10,10,0,0" VerticalAlignment="Top" Width="729">
                        <Label FontWeight="Bold" FontSize="14" Margin="0,5" Content="Master Bahan"/>
                        <DataGrid x:Name="dgBahan" Height="468" IsReadOnly="True" AutoGeneratingColumn="dgBahan_AutoGeneratingColumn" MouseUp="dgBahan_MouseUp" Canvas.Left="10" Canvas.Top="36" Width="709" ColumnWidth="*"/>
                    </Canvas>
                    <Canvas x:Name="panelInsertBahan" HorizontalAlignment="Left" Height="514" Margin="10,10,0,0" VerticalAlignment="Top" Width="729"  Visibility="Visible">
                        <Label FontWeight="Bold" FontSize="14" Margin="0,5" Content="Insert Bahan"/>
                        <Label Content="MERK :" Canvas.Left="64" Canvas.Top="72" FontWeight="Bold" FontSize="14" Height="29"/>
                        <Label Content="QUANTITY :" Canvas.Left="32" Canvas.Top="123" FontWeight="Bold" FontSize="14" Height="29"/>
                        <Label Content="JENIS BAHAN :" Canvas.Left="11" Canvas.Top="240" FontWeight="Bold" FontSize="14" Height="29"/>
                        <Label Content="SUPPLIER :" Canvas.Left="39" Canvas.Top="305" FontWeight="Bold" FontSize="14" Height="29"/>
                        <TextBox x:Name="tbQuantity" Height="29" TextWrapping="Wrap" Canvas.Left="145" Canvas.Top="123" Width="56"/>
                        <TextBox x:Name="tbMerk" Height="29" TextWrapping="Wrap" Canvas.Left="145" Canvas.Top="72" Width="236"/>
                        <ComboBox x:Name="cbJenisBahan" Canvas.Left="145" Canvas.Top="240" Width="236" Height="29"/>
                        <ComboBox x:Name="cbSupplier" Canvas.Left="145" Canvas.Top="305" Width="236" Height="29"/>
                        <Image x:Name="imgInsert" HorizontalAlignment="Left" Height="193" VerticalAlignment="Top" Width="281" Canvas.Left="424" Canvas.Top="72"/>
                        <Button x:Name="btnSubmit" Content="Submit" Canvas.Left="145" Canvas.Top="378" Width="105" Height="40" Background="#FF3AB74D" BorderBrush="#FF3AB752" Click="btnSubmit_Click"/>
                        <ComboBox x:Name="cbSatuan" Canvas.Left="206" Canvas.Top="127" Width="57" SelectedIndex="0">
                            <System:String>GRAM</System:String>
                            <System:String>mL</System:String>
                            <System:String>BUTIR</System:String>
                        </ComboBox>
                        <Label Content="HARGA :" Canvas.Left="54" Canvas.Top="180" FontWeight="Bold" FontSize="14" Height="29"/>
                        <TextBox x:Name="tbHarga" Height="29" TextWrapping="Wrap" Canvas.Left="145" Canvas.Top="180" Width="236"/>
                        <Button x:Name="btnOpenImg" Content="Open Image" Canvas.Left="424" Canvas.Top="270" Width="114" Height="31" Background="#FF3AB74D" BorderBrush="#FF3AB752" Click="BtnOpenImg_Click" RenderTransformOrigin="0.624,2.088"/>
                    </Canvas>
                    <Canvas x:Name="panelUpdateBahan" HorizontalAlignment="Left" Height="514" Margin="10,10,0,0" VerticalAlignment="Top" Width="729" Visibility="Hidden">
                        <Label FontWeight="Bold" FontSize="14" Margin="0,5" Content="Update Bahan"/>
                        <Label Content="MERK :" Canvas.Left="64" Canvas.Top="72" FontWeight="Bold" FontSize="14" Height="29"/>
                        <Label Content="QUANTITY :" Canvas.Left="32" Canvas.Top="123" FontWeight="Bold" FontSize="14" Height="29"/>
                        <Label Content="JENIS BAHAN :" Canvas.Left="11" Canvas.Top="240" FontWeight="Bold" FontSize="14" Height="29"/>
                        <Label Content="SUPPLIER :" Canvas.Left="39" Canvas.Top="305" FontWeight="Bold" FontSize="14" Height="29"/>
                        <TextBox x:Name="tbQuantityUpdate" Height="29" TextWrapping="Wrap" Canvas.Left="145" Canvas.Top="123" Width="56"/>
                        <TextBox x:Name="tbMerkUpdate" Height="29" TextWrapping="Wrap" Canvas.Left="145" Canvas.Top="72" Width="236"/>
                        <ComboBox x:Name="cbJenisBahanUpdate" Canvas.Left="145" Canvas.Top="240" Width="236" Height="29"/>
                        <ComboBox x:Name="cbSupplierUpdate" Canvas.Left="145" Canvas.Top="305" Width="236" Height="29"/>
                        <Button x:Name="btnSubmitUpdate" Content="Submit" Canvas.Left="145" Canvas.Top="378" Width="105" Height="40" Background="#FF3AB74D" BorderBrush="#FF3AB752" Click="btnSubmitUpdate_Click"/>
                        <ComboBox x:Name="cbSatuanUpdate" Canvas.Left="206" Canvas.Top="127" Width="57" SelectedIndex="0">
                            <System:String>GRAM</System:String>
                            <System:String>mL</System:String>
                            <System:String>BUTIR</System:String>
                        </ComboBox>
                        <Label Content="HARGA :" Canvas.Left="54" Canvas.Top="180" FontWeight="Bold" FontSize="14" Height="29"/>
                        <TextBox x:Name="tbHargaUpdate" Height="29" TextWrapping="Wrap" Canvas.Left="145" Canvas.Top="180" Width="236"/>
                    </Canvas>

                    <Button x:Name="btnInsert" Content="INSERT&#xa;BAHAN" HorizontalAlignment="Left" Margin="744,85,0,0" VerticalAlignment="Top" Width="91" Height="62" Click="btnInsert_Click" FontSize="12"/>
                    <Button x:Name="btnDelete" Content="DELETE&#xa;BAHAN" HorizontalAlignment="Left" Margin="744,184,0,0" VerticalAlignment="Top" Width="91" Height="57" FontSize="12"/>
                    <Button x:Name="btnBack" Content="BACK TO MASTER" HorizontalAlignment="Left" Margin="688,502,0,0" VerticalAlignment="Top" Width="147" Height="38" Click="btnBack_Click" Visibility="Hidden"/>

                </Grid>
            </TabItem>
            <TabItem x:Name="tabMasterRoti" Style="{StaticResource MaterialDesignNavigationRailTabItem}" Width="Auto">
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="Heart" FontSize="15" Height="20" Width="auto"/>
                        <TextBlock Text="Master Roti" Margin="10 0 0 0" FontSize="15"/>
                    </StackPanel>
                </TabItem.Header>
                <Grid>
                    <ListBox>
                        <ListBoxItem FontWeight="Bold" FontSize="14" Margin="0,5" Content="Master Roti"/>
                        <ListBoxItem Content="Halo"/>
                        <ListBoxItem Content="Ini"/>
                        <ListBoxItem Content="Masih"/>
                        <ListBoxItem Content="Kosong Juga :D"/>
                    </ListBox>
                </Grid>
            </TabItem>
            <TabItem x:Name="tabMasterResep" Style="{StaticResource MaterialDesignNavigationRailTabItem}" Width="Auto">
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="Spade" FontSize="15" Height="20" Width="auto"/>
                        <TextBlock Text="Master Resep" Margin="10 0 0 0" FontSize="15"/>
                    </StackPanel>
                </TabItem.Header>
                <Grid>
                    <ListBox>
                        <ListBoxItem FontWeight="Bold" FontSize="14" Margin="0,5" Content="Master Resep"/>
                        <ListBoxItem Content="Halo"/>
                        <ListBoxItem Content="Ini"/>
                        <ListBoxItem Content="Masih"/>
                        <ListBoxItem Content="Kosong Juga :P"/>
                    </ListBox>
                </Grid>
            </TabItem>
            <TabItem x:Name="tabMasterKaryawan" Style="{StaticResource MaterialDesignNavigationRailTabItem}" Width="Auto" MouseDoubleClick="tabMasterKaryawan_MouseDoubleClick">
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="Account" FontSize="15" Height="20" Width="auto"/>
                        <TextBlock Text="Master Karyawan" Margin="10 0 0 0" FontSize="15"/>
                    </StackPanel>
                </TabItem.Header>
                <Grid>
                    <Canvas x:Name="panelMasterKaryawan" HorizontalAlignment="Left" Height="514" Margin="10,10,0,0" VerticalAlignment="Top" Width="729">
                        <Label FontWeight="Bold" FontSize="14" Margin="0,5" Content="Master Karyawan"/>
                        <DataGrid x:Name="dgKaryawan" Height="468" IsReadOnly="True" Canvas.Left="10" Canvas.Top="36" Width="709" ColumnWidth="*" MouseUp="dgKaryawan_MouseUp"/>
                    </Canvas>
                    <Canvas x:Name="panelInsertKaryawan" HorizontalAlignment="Left" Height="514" Margin="10,10,0,0" VerticalAlignment="Top" Width="729" Visibility="Hidden">
                        <Label FontWeight="Bold" FontSize="14" Margin="0,5" Content="Insert Karyawan"/>
                        <Label Content="NAMA :" Canvas.Left="75" Canvas.Top="35" FontWeight="Bold" FontSize="14" Height="29"/>
                        <Label Content="USERNAME :" Canvas.Left="43" Canvas.Top="79" FontWeight="Bold" FontSize="14" Height="29"/>
                        <Label Content="PASSWORD :" Canvas.Left="42" Canvas.Top="124" FontWeight="Bold" FontSize="14" Height="29"/>
                        <Label Content="EMAIL :" Canvas.Left="76" Canvas.Top="171" FontWeight="Bold" FontSize="14" Height="29"/>
                        <Label Content="JENIS KELAMIN :" Canvas.Left="16" Canvas.Top="213" FontWeight="Bold" FontSize="14" Height="29"/>
                        <Label Content="ALAMAT :" Canvas.Left="63" Canvas.Top="258" FontWeight="Bold" FontSize="14" Height="29"/>
                        <Label Content="NO. TELEPON :" Canvas.Left="31" Canvas.Top="306" FontWeight="Bold" FontSize="14" Height="29"/>
                        <Label Content="JABATAN :" Canvas.Left="56" Canvas.Top="393" FontWeight="Bold" FontSize="14" Height="29"/>
                        <TextBox x:Name="tbNamaKaryawan" Height="29" TextWrapping="Wrap" Canvas.Left="140" Canvas.Top="35" Width="276"/>
                        <TextBox x:Name="tbUsernameKaryawan" Height="29" TextWrapping="Wrap" Canvas.Left="140" Canvas.Top="79" Width="276"/>
                        <TextBox x:Name="tbPasswordKaryawan" Height="29" TextWrapping="Wrap" Canvas.Left="140" Canvas.Top="124" Width="276"/>
                        <TextBox x:Name="tbEmailKaryawan" Height="29" TextWrapping="Wrap" Canvas.Left="140" Canvas.Top="171" Width="276"/>
                        <TextBox x:Name="tbAlamatKaryawan" Height="29" TextWrapping="Wrap" Canvas.Left="141" Canvas.Top="257" Width="276"/>
                        <TextBox x:Name="tbNoTelpKaryawan" Height="29" TextWrapping="Wrap" Canvas.Left="140" Canvas.Top="306" Width="276"/>
                        <RadioButton x:Name="rbLakiKaryawan" Content="Laki - Laki" Canvas.Left="140" Canvas.Top="218"/>
                        <RadioButton x:Name="rbPerempuanKaryawan" Content="Perempuan" Canvas.Left="235" Canvas.Top="218"/>
                        <ComboBox x:Name="cbJabatan" Canvas.Left="139" Canvas.Top="397" Width="176"/>
                        <Button x:Name="btnSubmitKaryawan" Content="Submit" Canvas.Left="141" Canvas.Top="450" Width="107" Height="36" Background="#FF1EBD20" BorderBrush="#FF27C328" Click="btnSubmitKaryawan_Click"/>
                        <Label Content="TANGGAL LAHIR :" Canvas.Left="7" Canvas.Top="351" FontWeight="Bold" FontSize="14" Height="29"/>
                        <DatePicker x:Name="dtpTanggalLahir" Canvas.Left="141" Canvas.Top="351" Height="29" Width="174"/>
                    </Canvas>
                    <Button x:Name="btnActive" Content="ACTIVE" HorizontalAlignment="Left" Margin="744,85,0,0" VerticalAlignment="Top" Width="91" Height="62" FontSize="12" IsEnabled="False" Click="btnActive_Click"/>
                    <Button x:Name="btnSuspend" Content="SUSPEND" HorizontalAlignment="Left" Margin="744,152,0,0" VerticalAlignment="Top" Width="91" Height="62" FontSize="12" IsEnabled="False" Click="btnSuspend_Click"/>
                    <Button x:Name="btnBackKaryawan" Content="BACK TO MASTER" HorizontalAlignment="Left" Margin="688,502,0,0" VerticalAlignment="Top" Width="147" Height="38" Visibility="Hidden" Click="btnBackKaryawan_Click"/>
                    <Button x:Name="btnInsertKaryawan" Content="INSERT&#xa;KARYAWAN" HorizontalAlignment="Left" Margin="744,219,9.8,0" VerticalAlignment="Top" Width="91" Height="62" FontSize="11" Click="btnInsertKaryawan_Click"/>

                </Grid>
            </TabItem>
            <TabItem Style="{StaticResource MaterialDesignNavigationRailTabItem}" Width="Auto">
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="Spade" FontSize="15" Height="20" Width="auto"/>
                        <TextBlock Text="Daftar Pesanan" Margin="10 0 0 0" FontSize="15"/>
                    </StackPanel>
                </TabItem.Header>
                <Grid x:Name="grid_DaftarPesanan">
                    <Label Content="Daftar Pesanan" HorizontalAlignment="Center" Margin="334,15,358,0" VerticalAlignment="Top" Foreground="#DD000000" FontFamily="Open Sans" FontSize="24"/>
                    <DataGrid CanUserAddRows="False" x:Name="dtGridPesanan"
                              CanUserReorderColumns="False" CanUserResizeColumns="False"
                              CanUserDeleteRows="False" CanUserResizeRows="False"
                              AutoGenerateColumns="False"
                              HeadersVisibility="All" Margin="0,57,0,10"
                              IsReadOnly="True">

                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Nomor Nota" Binding="{Binding nomor_nota}" Width="*"
                                EditingElementStyle="{StaticResource MaterialDesignDataGridTextColumnEditingStyle}" >
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="TextBlock.TextWrapping" Value="Wrap" />
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>

                            <DataGridTextColumn Header="Tanggal" Binding="{Binding tanggal_trans}" Width="*"
                                EditingElementStyle="{StaticResource MaterialDesignDataGridTextColumnEditingStyle}">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="TextBlock.TextWrapping" Value="Wrap" />
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>

                            <DataGridTextColumn Header="Total" Binding="{Binding total, StringFormat=C, ConverterCulture='id-ID'}" Width="*"
                                EditingElementStyle="{StaticResource MaterialDesignDataGridTextColumnEditingStyle}">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="TextBlock.TextWrapping" Value="Wrap" />
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>

                            <DataGridTextColumn Header="Pelanggan" Binding="{Binding id_pelanggan}" Width="*"
                                EditingElementStyle="{StaticResource MaterialDesignDataGridTextColumnEditingStyle}">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="TextBlock.TextWrapping" Value="Wrap" />
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>

                            <DataGridTextColumn Header="Pembayaran" Binding="{Binding metode_pembayaran}" Width="*"
                                EditingElementStyle="{StaticResource MaterialDesignDataGridTextColumnEditingStyle}">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="TextBlock.TextWrapping" Value="Wrap" />
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>

                            <DataGridTextColumn Header="Status" Binding="{Binding status}" Width="*"
                                EditingElementStyle="{StaticResource MaterialDesignDataGridTextColumnEditingStyle}">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="TextBlock.TextWrapping" Value="Wrap" />
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>

                            <DataGridTemplateColumn>
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button x:Name="btnDetailHTrans" Click="BtnDetailHTrans_Click" CommandParameter="{Binding Path=nomor_nota}">Detail</Button>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
